<launch>

  <!-- Include the Realsense2 Camera launch file for immediate start-->
  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch" /> 

  <!-- Config camera image topic  -->
  <arg name="camera_rgb_topic" default="/camera/color/image_raw" />

  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>

  <!-- Declare an argument for a rosbag to get data of boxlimits-->
  <arg name="darknet_bbox_bag" default="false" />


  <!-- Config and weights folder. -->
  <arg name="yolo_weights_path"          default="$(find darknet_ros)/yolo_network_config/weights"/>
  <arg name="yolo_config_path"           default="$(find darknet_ros)/yolo_network_config/cfg"/>

  <!-- ROS and network parameter files -->
  <arg name="ros_param_file"             default="$(find darknet_ros)/config/ros.yaml"/>
  <arg name="network_param_file"         default="$(find darknet_ros)/config/yolov2-tiny.yaml"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="darknet_ros" file="$(arg network_param_file)"/>
  <rosparam command="load" file="$(find darknet_ros)/config/ros.yaml"/>
  <param name="darknet_ros/subscribers/camera_reading/topic" type="string" value="$(arg camera_rgb_topic)" />

  <!-- Start darknet and ros wrapper -->
  <node pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">

    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />
  </node>

  <!-- Start darknet ros 3d -->
  <node pkg="darknet_ros_3d" type="darknet3d_node" name="darknet_3d" output="screen">
    <rosparam command="load" file="$(find darknet_ros_3d)/config/darknet_3d.yaml" />
  </node>

  <!-- Correcting the TF for on board camera -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_to_base_link" 
  args= "0.16 0 0.128 0 0.366519 0 /base_link /camera_link"/> <!-- 21 deg -->
  <!-- 40 deg = 0.698132, 35 deg = 0.610865, 25deg = 0.436332, 22deg = 0.383972, 21 deg = 0.366519-->

  <group if="$(arg darknet_bbox_bag)">
      <node pkg="rosbag" type="record" name="darknet_bbox"
      args="-o $(find darknet_ros_3d)/bag/darknet_bbox_bag /darknet_ros_3d/bounding_boxes" />
  </group>
  
</launch>
